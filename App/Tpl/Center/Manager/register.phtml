	<form id="form" name="form">
		<div class="form_pad_10">
			<table border="0" cellspacing="0" cellpadding="0">
				<tr>
					<td width="75" height="30" align="right">用户名：</td>
					<td><input name="name" type="text" class="input_text" style="width:200px;"
						id="name" />&nbsp;<span class="mustIn">*</span>&nbsp;5-20位，字母数字下划线</td>
				</tr>
				<tr>
					<td height="15" align="right"></td>
