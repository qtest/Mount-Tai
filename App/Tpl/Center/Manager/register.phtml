<script language="javascript">
$(function(){
	pc_init();
})
function submitForm(w){
	if($.trim($("#company").val())==""){
		Maya.Msg("请填写 <strong>公司名称</strong>");
		return false;	
	}
	if($.trim($("#manager").val())==""){
		Maya.Msg("请填写 <strong>联系人姓名</strong>");
		return false;	
	}
	if($.trim($("#name").val())==""){
		Maya.Msg("请填写 <strong>用户名</strong>");
		return false;	
	}
	if($.trim($("#pwd").val())=="" || $.trim($("#new_pwd").val())==""){
		Maya.Msg("请填写 <strong>密码</strong> 或 <strong>重复密码</strong>");
		return false;	
	}
	/*if(isNaN(the.QQ.value)){
		alert("你输入的QQ不是数字！");
		the.QQ.focus();
		return false;
	}*/
	Maya.Msg({
	    msg : "正在提交中，请稍后....",
	    sec : 1.5,
  	});
    $.post(
            "<?=U(MODULE_NAME.'/'.ACTION_NAME)?>",
            $("#form").formSerialize(),
            function(data){
                    if(data.data == "success"){
                            Maya.Msg({
                                    type : "success",
                                    msg : data.info,
                                    sec : 1.5,
                                    call : function(){
                                        w.close();
                                            //window.location="<?=U("Index/index")?>";
                                    }
                            });
                    }else{
                            Maya.Msg({
                                    type : "fail",
                                    msg : data.info
                            });
                    }
            },
            "json"
    );
	return false;
}
</script>
</head>
